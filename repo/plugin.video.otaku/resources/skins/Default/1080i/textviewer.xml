<window>
	<controls>
		<control type="group">
			<left>110</left>
			<top>90</top>
			<control type="group">
				<width>1700</width>
				<control type="image">
					<height>900</height>
					<texture colordiffuse="FF555555">texture.png</texture>
				</control>
				<control type="image">
					<height>100</height>
					<texture>texture.png</texture>
				</control>
				<control type="label">
					<top>40</top>
					<left>0</left>
					<width max="1700">auto</width>
					<height>20</height>
					<font>font16</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[Window().Property(otaku.heading)]</label>
				</control>
				<control type="textbox" id="2000">
					<left>0</left>
					<top>100</top>
					<width>1670</width>
					<height>800</height>
					<onup>2000</onup>
					<ondown>2000</ondown>
					<scrolltime tween="sine">400</scrolltime>
					<font>font14</font>
					<textcolor>white</textcolor>
					<label>$INFO[Window().Property(otaku.text)]</label>
					<pagecontrol>2060</pagecontrol>
				</control>
				<control type="scrollbar" id="2060">
					<left>1670</left>
					<top>100</top>
					<width>30</width>
					<height>800</height>
					<texturesliderbackground border="15">scrollbars/scrollbaruni-bg.png</texturesliderbackground>
					<texturesliderbar border="15">scrollbars/scrollbaruni-bar.png</texturesliderbar>
					<texturesliderbarfocus border="15">scrollbars/scrollbaruni-bar-focus.png</texturesliderbarfocus>
					<textureslidernib>scrollbars/scrollbaruni-nib.png</textureslidernib>
					<textureslidernibfocus>scrollbars/scrollbaruni-nib.png</textureslidernibfocus>
					<onleft>2060</onleft>
					<onright>2060</onright>
					<onup>2060</onup>
					<ondown>2060</ondown>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<hitrect x="0" y="100" w="1700" h="800">None</hitrect>
				</control>
			</control>
		</control>
	</controls>
</window>